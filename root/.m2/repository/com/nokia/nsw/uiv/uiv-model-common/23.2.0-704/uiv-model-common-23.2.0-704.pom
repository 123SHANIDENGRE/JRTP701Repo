<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.nokia.nsw.uiv</groupId>
    <artifactId>uiv-model-common</artifactId>
    <name>uiv-model-common</name>
    <version>23.2.0-704</version>
    <packaging>jar</packaging>
    <parent>
        <groupId>com.nokia.nsw.uiv</groupId>
        <artifactId>uiv-parent</artifactId>
        <version>23.2.0-704</version>
</parent>
<properties>
                <techtemplate.name>base</techtemplate.name>
        <techtemplate.api.version>2020</techtemplate.api.version>
            </properties>

    <dependencies>
        <dependency>
            <groupId>com.nokia.nsw.uiv</groupId>
            <artifactId>uiv-core</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <!-- use this for adding generate-sources as part of buildClasses-path -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>3.0.0</version>
                <executions>
                    <execution>
                        <id>generate-sources</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>${project.basedir}/target/generated-sources</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.nokia.nsw.uiv</groupId>
                <artifactId>uiv-maven-plugin</artifactId>
                <version>23.2.0-704</version>
                <executions>
                    <execution>
                        <id>generate-model</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <basePackage>com.nokia</basePackage>
			    <outputDirectory>${project.basedir}/target/generated-sources</outputDirectory>
			    <resourcesOutputDirectory>${project.basedir}/target/generated-resources</resourcesOutputDirectory>
			    <testOutputDirectory>${project.basedir}/target/generated-test-sources</testOutputDirectory>
			    <testResourcesOutputDirectory>${project.basedir}/target/generated-test-resources</testResourcesOutputDirectory>
                            <outputDirectoryNoAnnotations>
                                ${project.basedir}/target-ogm-annot-only/generated-sources-ogm-annot-only
                            </outputDirectoryNoAnnotations>
                            <modelOnly>true</modelOnly>
                            <models>
                                <model>
					<filename>${project.basedir}/src/main/resources/model/InfoModel/Common/PartyModel.mdj</filename>
                                    <database>Neo4j</database>
                                </model>
                                <model>
					<filename>${project.basedir}/src/main/resources/model/InfoModel/Common/ServiceModel.mdj</filename>
                                    <database>Neo4j</database>
                                </model>
                                <model>
                                    <filename>${project.basedir}/src/main/resources/model/InfoModel/Common/LocationModel.mdj</filename>
                                    <database>Neo4j</database>
                                </model>
                                <model>
                                    <filename>${project.basedir}/src/main/resources/model/InfoModel/Common/CommonModel.mdj</filename>
                                    <database>Neo4j</database>
                                </model>
			     	<model>
                                    <filename>${project.basedir}/src/main/resources/model/InfoModel/Common/ResourceModel.mdj</filename>
                                    <database>Neo4j</database>
			    </model>
			    <model>
                                    <filename>${project.basedir}/src/main/resources/model/InfoModel/Common/PolicyModel.mdj</filename>
                                    <database>Neo4j</database>
			    </model>
			    <model>
                                    <filename>${project.basedir}/src/main/resources/model/InfoModel/Common/NumberManagementModel.mdj</filename>
                                    <database>Neo4j</database>
			    </model>
                            </models>
                        </configuration>
                    </execution>
                </executions>
	</plugin>
	 <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${maven.compiler.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                        <configuration>
                            <compileSourceRoots>
                                ${project.basedir}/target-ogm-annot-only/generated-sources-ogm-annot-only
                            </compileSourceRoots>
                            <outputDirectory>${project.basedir}/target-ogm-annot-only/classes</outputDirectory>                            
                        </configuration>
                    </execution>
                </executions>
                <configuration>
                    <source>${jdk.version}</source>
                    <target>${jdk.version}</target>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-clean-plugin</artifactId>
                <version>3.1.0</version>
                <configuration>
                    <filesets>
                        <fileset>
                            <directory>${project.basedir}/target-ogm-annot-only/</directory>
                        </fileset>
                    </filesets>
                </configuration>
	</plugin>
	<plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
		<version>2.4</version>
                <executions>
			<execution>
                        <id>ogm-annot-only</id>
                        <phase>package</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <configuration>
                            <classifier>ogm-annot-only</classifier>
                            <classesDirectory>${project.basedir}/target-ogm-annot-only/classes</classesDirectory>
                            <excludes>
                                <exclude>**/UivServer.class</exclude>
                                <exclude>**/bin/*</exclude>
                            </excludes>
                            <outputDirectory>${project.basedir}/target-ogm-annot-only/</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
